<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:text="Welcome to VehicleGuard"
        android:textSize="30sp"
        android:gravity="center_horizontal"/>
    <!--magno-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/xMagnoValue"
        android:layout_marginTop="10sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yMagnoValue"
        android:layout_marginTop="3sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zMagnoValue"/>

    <!--accelarometer-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/xAcceValue"
        android:layout_marginTop="10sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yAcceValue"
        android:layout_marginTop="3sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zAcceValue"/>


    <!--Gyroscope-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/xGyroValue"
        android:layout_marginTop="10sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yGyroValue"
        android:layout_marginTop="3sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zGyroValue"
        android:layout_marginTop="3sp"/>

    <!---temperature-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tempValue"
        android:layout_marginTop="10sp"
        android:visibility="gone"/>

    <!---pressure-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pressureValue"
        android:layout_marginTop="10sp"
        android:visibility="gone"/>
    <!--light-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lightValue"
        android:layout_marginTop="10sp"
        android:visibility="gone"/>

    <!--humidity-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/humiValue"
        android:layout_marginTop="10sp"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/edit_text_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:inputType="phone"
        android:visibility="gone"/>

<!--    email and phone number-->
    <EditText
        android:id="@+id/et_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:hint="Enter your Email"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="0dp"
        android:hint="Enter your Phone Number"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/bt_Set"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Set"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="135dp"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_Stop"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Stop"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/bt_Start"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="2dp"
            android:text="Start"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
